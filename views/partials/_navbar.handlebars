<div id="container">
  <aside class="sidebar">
    <header>

      {{#if user}}
      <p style="margin-left: -10px; background-color: rgba(255, 255, 255, 0.171)" class="card">{{user.nome}}</p>

      {{/if}}
      <img id="img" src="../img/window.png">

    </header>

    <nav>
      <a href="/home"><button>
          <span>
            <img src="../img/home.png">
            <span id="text"></span>
          </span>
        </button></a> <br>

      {{#if user}}



      <a href="/usuarios/tarefas">
        <button id="taski">
          <span>
            <img src="../img/tasksinc.png">
            <span id="text"></span>
          </span>
        </button></a> <br>

      <a href="/usuarios/concluidas"><button id="task">
          <span>
            <img src="../img/tasks.png">
            <span id="text"></span>
          </span>
        </button></a> <br>

      <a href="/usuarios/nova">
        <button id="new">
          <span>
            <img src="../img/new.png">
            <span id="text"></span>
          </span>
        </button></a> <br>

      <a href="/usuarios/deletar"><button id="delete">
          <span>
            <img src="../img/delete.png">
            <span id="text"></span>
          </span>
        </button></a> <br>

      <a href="/logout"><button id="logout">
          <span>
            <img src="../img/logout.png">
            <span id="text"></span>
          </span>
        </button></a> <br>
      {{else}}

      <a href="/login"><button id="login" style="margin-top: 650%;">
          <span>
            <img src="../img/login.png">
            <span id="text"></span>
          </span>
        </button></a> <br>

      <a href="/registro"><button id="registro">
          <span>
            <img src="../img/register.png">
            <span id="text"></span>
          </span>
        </button></a> <br>

